{
    "env": {
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "space-infix-ops": [
            "error",
            {"int32Hint": false}
        ],
        "no-trailing-spaces": [
            "error",
            { "skipBlankLines": true }
        ],
        "no-unused-vars": [2, {"vars": "local", "args": "none"}]
    }
}